# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
GET     /                           controllers.BoardController.index()
GET     /createForm					controllers.BoardController.createForm()
POST    /createForm                 controllers.BoardController.create()
GET     /edit/:id                   controllers.BoardController.edit(id: Long)
POST	/update/:id					controllers.BoardController.update(id: Long)
GET		/login						controllers.LoginController.index()
POST	/login						controllers.LoginController.connect()
GET		/disconnect					controllers.LoginController.disconnect()